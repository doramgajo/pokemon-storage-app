<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Buscar por nombre:"
        app:layout_constraintBottom_toTopOf="@+id/campo_Buscar_por_nombre"
        app:layout_constraintStart_toStartOf="@+id/campo_Buscar_por_nombre" />

    <Spinner
        android:id="@+id/campo_Buscar_por_nombre"
        android:layout_width="200dp"
        android:layout_height="32dp"
        app:layout_constraintBottom_toTopOf="@+id/campo_Buscar_por_nivel"
        app:layout_constraintEnd_toStartOf="@+id/btn_Buscar_por_nombre"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Buscar_por_nombre"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/naranja"
        android:text="Buscar"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/campo_Buscar_por_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/campo_Buscar_por_nombre"
        app:layout_constraintTop_toTopOf="@+id/campo_Buscar_por_nombre" />

    <Button
        android:id="@+id/btn_Buscar_por_nivel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/naranja"
        android:text="Buscar"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/campo_Buscar_por_nivel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/campo_Buscar_por_nivel"
        app:layout_constraintTop_toTopOf="@+id/campo_Buscar_por_nivel" />

    <EditText
        android:id="@+id/campo_Buscar_por_nivel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn_Limpiar_filtros"
        app:layout_constraintEnd_toStartOf="@+id/btn_Buscar_por_nivel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_Buscar_por_nombre" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Buscar por nivel:"
        app:layout_constraintBottom_toTopOf="@+id/campo_Buscar_por_nivel"
        app:layout_constraintStart_toStartOf="@+id/campo_Buscar_por_nivel" />

    <Button
        android:id="@+id/btn_Limpiar_filtros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/naranja"
        android:text="Limpiar filtros"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campo_Buscar_por_nivel"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>