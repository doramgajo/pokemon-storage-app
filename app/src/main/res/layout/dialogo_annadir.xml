<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/annadir_spinnerNombresPokemon"
        android:layout_width="188dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerNaturalezas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="PokÃ©mon:"
        app:layout_constraintBottom_toTopOf="@+id/annadir_spinnerNombresPokemon"
        app:layout_constraintStart_toStartOf="@+id/annadir_spinnerNombresPokemon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Naturaleza:"
        app:layout_constraintBottom_toTopOf="@+id/spinnerNaturalezas"
        app:layout_constraintStart_toStartOf="@+id/spinnerNaturalezas" />

    <Spinner
        android:id="@+id/spinnerNaturalezas"
        android:layout_width="172dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toTopOf="@+id/nivelCapturado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/annadir_spinnerNombresPokemon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nivel capturado:"
        app:layout_constraintBottom_toTopOf="@+id/nivelCapturado"
        app:layout_constraintStart_toStartOf="@+id/nivelCapturado" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Nivel actual:"
        app:layout_constraintBottom_toTopOf="@+id/nivelActual"
        app:layout_constraintStart_toStartOf="@+id/nivelActual" />

    <EditText
        android:id="@+id/nivelCapturado"
        android:layout_width="99dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        android:text="10"
        app:layout_constraintBottom_toTopOf="@+id/nivelActual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerNaturalezas" />

    <EditText
        android:id="@+id/nivelActual"
        android:layout_width="86dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nivelCapturado" />
</androidx.constraintlayout.widget.ConstraintLayout>